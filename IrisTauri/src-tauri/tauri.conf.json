{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../ui",
    "distDir": "../ui",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Iris",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "startDragging": true,
        "minimize": true,
        "close": true,
        "hide": true,
        "show": true,
        "setFocus": true
      },
      "shell": {
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "NoMercy 2024",
      "externalBin": [],
      "icon": [
        "icons/icon.ico"
      ],
      "identifier": "com.nomercy.iris",
      "longDescription": "Iris Anticheat - NoMercy Security System",
      "resources": [],
      "shortDescription": "Iris Anticheat",
      "targets": ["nsis"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": null,
        "nsis": {
          "installerIcon": "icons/icon.ico",
          "headerImage": null,
          "sidebarImage": null,
          "installMode": "currentUser",
          "languages": ["French", "English"],
          "displayLanguageSelector": false
        }
      }
    },
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' https://cdn.discordapp.com https://nomercy.ggsecure.io data: asset: https://asset.localhost; connect-src 'self' https://nomercy.ggsecure.io http://localhost:5000"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "Iris - NoMercy Anticheat",
        "width": 400,
        "height": 640,
        "minWidth": 380,
        "minHeight": 580,
        "maxWidth": 400,
        "maxHeight": 640,
        "resizable": false,
        "maximizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "center": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    }
  }
}
